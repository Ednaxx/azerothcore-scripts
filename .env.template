DATA_DIR=$HOME/azerothcore-wotlk/build/data # Path to the data directory, where the server data is stored

# Server paths
AUTH_PATH="$AC_BUILD_DIR/src/server/apps/authserver"
WORLD_PATH="$AC_BUILD_DIR/src/server/apps/worldserver"

# Session names
AUTH_SESSION="azeroth-auth"
WORLD_SESSION="azeroth-world"